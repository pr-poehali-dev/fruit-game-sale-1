{
  "tests": [
    {
      "name": "Check OPTIONS for CORS",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "POST without email returns error",
      "method": "POST",
      "path": "/",
      "body": {},
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with email (will fail without secrets)",
      "method": "POST",
      "path": "/",
      "body": {
        "email": "test@example.com"
      },
      "expectedStatus": 500
    }
  ]
}
